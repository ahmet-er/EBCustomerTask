@model EBCustomerTask.Application.DTOs.CustomerDetailViewModel

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container">
	<div class="card">
		<div class="card-header">
			<div class="alert alert-warning">
				<h4 class="alert-heading">Are you sure you want to delete this customer?</h4>
				<p>This action cannot be undone.</p>
			</div>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-sm-6">
					<dl class="row">
						<dt class="col-sm-3">First Name</dt>
						<dd class="col-sm-9">@Model.FirstName</dd>

						<dt class="col-sm-3">Last Name</dt>
						<dd class="col-sm-9">@Model.LastName</dd>

						<dt class="col-sm-3">Email</dt>
						<dd class="col-sm-9">@Model.Email</dd>

						<dt class="col-sm-3">Phone Number</dt>
						<dd class="col-sm-9">@Model.PhoneNumber</dd>

						<dt class="col-sm-3">Birth Date</dt>
						<dd class="col-sm-9">@Model.BirthDate.ToShortDateString()</dd>
					</dl>
				</div>

				<div class="col-sm-6">
					<dl class="row">
						<dd class="col-sm-12 text-center">
							@if (!string.IsNullOrEmpty(Model.PhotoUrl))
							{
								<img src="@Model.PhotoUrl" alt="Photo" class="img-thumbnail" style="max-width: 150px; height: 150px; object-fit: cover;" />
							}
							else
							{
								<span>No photo available</span>
							}
						</dd>
					</dl>
				</div>
			</div>
		</div>
		<div class="card-footer">
			<form asp-action="DeleteConfirmed" method="post">
				<input type="hidden" asp-for="Id" />

				<div class="form-group">
					<button type="submit" class="btn btn-danger">Delete</button>
					<a asp-action="Index" class="btn btn-secondary">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>
